{
  "name": "xences-bend",
  "version": "1.0.0",
  "description": "server/api endpoint for the xences app",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "webpack": "webpack",
    "build": "npm-run-all lint webpack",
    "start": "node ./dist/index.js",
    "start:dev": "nodemon",
    "test": "jest --coverage"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm-run-all webpack start",
    "ext": "ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faksam/xences-bend.git"
  },
  "author": "Samuel Fakunle (FakSam)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/faksam/xences-bend/issues"
  },
  "homepage": "https://github.com/faksam/xences-bend#readme",
  "dependencies": {
    "@types/supertest": "^2.0.7",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jest": "^24.7.0",
    "nodemon": "^1.18.10",
    "ts-loader": "^5.3.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.1",
    "tslint": "^5.15.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.4.1",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  }
}
